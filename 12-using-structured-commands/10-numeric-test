#!/bin/bash
# Author: Ali Moradzade

# Using numeric test evaluations
value1=10
value2=11

if [ $value1 -gt 5 ]
then
	echo "The test value $value1 is greater than 5"
fi
if [ $value1 -eq $value2 ]
then
	echo "The values are equal"
else
	echo "The values are different"
fi

# ----------------------------------
echo
v1=21
v2=20

if [ $v1 -eq 0 ]
then
	echo "$v1 is zero"
else
	echo "$v1 is not zero"
fi

if [ $v1 -le $v2 ]
then
	echo "$v1 <= $v2"
else
	echo "$v1 > $v2"
fi

